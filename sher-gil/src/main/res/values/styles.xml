<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Requires your theme to be a descendant of Theme.MaterialComponents -->
    <style name="Shergil" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- CardView -->
        <item name="materialCardViewStyle">@style/Shergil.CardView</item>
        <!-- or -->
        <item name="shergil_cardMediaCheckedColor">#8BC34A</item>
        <item name="shergil_cardMediaCheckedAlpha">0.1</item>
        <item name="shergil_cardMediaCheckedIconTintColor">#6b9b36</item>
        <item name="shergil_cardDisabledMediaColor">@android:color/secondary_text_dark</item>
        <item name="shergil_cardDisabledMediaAlpha">0.6</item>
        <!-- TODO: Improve default drawables -->
        <item name="shergil_cardMediaPlaceholderDrawable">@drawable/ic_placeholder_media</item>
        <item name="shergil_cardMediaErrorDrawable">@drawable/ic_placeholder_media</item>

        <!-- Toolbar -->
        <item name="shergil_toolbar">@style/Shergil.Toolbar</item>
        <item name="colorControlNormal">?attr/shergil_toolbarControlColor</item>
        <!-- or -->
        <item name="shergil_toolbarBackground">#8BC34A</item>
        <item name="shergil_toolbarControlColor">#000000</item>
        <item name="shergil_toolbarSpinnerAlbumNameText">#000000</item>
        <item name="shergil_toolbarSpinnerAlbumCountText">#000000</item>

        <!-- BottomBar -->
        <item name="shergil_bottomBar">@style/Shergil.BottomBar</item>
        <!-- or -->
        <item name="shergil_bottomBarBackground">#ffffff</item>
        <item name="shergil_bottomBarApplyButtonText">#000000</item>
        <item name="shergil_bottomBarApplyButtonDisabledText">#808080</item>
        <item name="shergil_bottomBarPreviewButtonText">#000000</item>
        <item name="shergil_bottomBarPreviewButtonDisabledText">#808080</item>

        <!-- Preview -->
        <!-- Preview dot attributes are drawables because
        theme attributes cannot be referenced in a drawable pre-Lollipop
        https://issuetracker.google.com/issues/36941443 -->
        <item name="shergil_previewDotDrawable">@drawable/tab_dot_default</item>
        <item name="shergil_previewSelectedDotDrawable">@drawable/tab_dot_indicator</item>
        <item name="shergil_previewSelectedDotColor">#6b9b36</item>
    </style>

    <!-- https://github.com/material-components/material-components-android/blob/master/docs/components/Card.md -->
    <style name="Shergil.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardForegroundColor">@color/card_view_foreground</item>
        <item name="checkedIconTint">?attr/shergil_cardMediaCheckedIconTintColor</item>
    </style>

    <style name="Shergil.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <item name="android:background">?attr/shergil_toolbarBackground</item>
    </style>

    <style name="Shergil.BottomBar">
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <item name="android:background">?attr/shergil_bottomBarBackground</item>
    </style>
</resources>