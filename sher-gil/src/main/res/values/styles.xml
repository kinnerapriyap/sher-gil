<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Requires your theme to be a descendant of Theme.MaterialComponents -->
    <style name="Shergil" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">sans-serif</item>

        <!-- CardView -->
        <item name="materialCardViewStyle">@style/Widget.Shergil.CardView</item>
        <!-- or -->
        <item name="shergil_cardMediaCheckedColor">#8BC34A</item>
        <item name="shergil_cardMediaCheckedAlpha">0.1</item>
        <item name="shergil_cardMediaCheckedIconTintColor">#6b9b36</item>
        <item name="shergil_cardDisabledMediaColor">@android:color/secondary_text_dark</item>
        <item name="shergil_cardDisabledMediaAlpha">0.6</item>
        <!-- TODO: Improve default drawables -->
        <item name="shergil_cardMediaPlaceholderDrawable">@drawable/ic_placeholder_media</item>
        <item name="shergil_cardMediaErrorDrawable">@drawable/ic_placeholder_media</item>

        <!-- Toolbar -->
        <item name="shergil_toolbar">@style/Shergil.Toolbar</item>
        <item name="colorControlNormal">?attr/shergil_toolbarControlColor</item>
        <!-- or -->
        <item name="shergil_toolbarBackground">#8BC34A</item>
        <item name="shergil_toolbarControlColor">#000000</item>
        <item name="shergil_toolbarSpinnerAlbumNameText">#000000</item>
        <item name="shergil_toolbarSpinnerAlbumCountText">#000000</item>
        <item name="shergil_toolbarSelectedSpinnerAlbumNameText">#ffffff</item>
        <item name="shergil_toolbarSelectedSpinnerAlbumCountText">#ffffff</item>

        <!-- BottomBar -->
        <item name="shergil_bottomBar">@style/Shergil.BottomBar</item>
        <!-- or -->
        <item name="shergil_bottomBarBackground">#ffffff</item>
        <item name="shergil_bottomBarApplyButtonText">#000000</item>
        <item name="shergil_bottomBarApplyButtonDisabledText">#808080</item>
        <item name="shergil_bottomBarPreviewButtonText">#000000</item>
        <item name="shergil_bottomBarPreviewButtonDisabledText">#808080</item>

        <!-- Preview -->
        <item name="shergil_previewSelectedDotColor">#6b9b36</item>
        <item name="shergil_previewDotColor">@android:color/holo_green_light</item>
        <item name="shergil_previewSelectedDotThickness">4dp</item>
        <item name="shergil_previewDotThickness">3dp</item>

        <item name="checkboxStyle">@style/Widget.Shergil.CheckBox</item>
        <!-- or -->
        <item name="shergil_previewCheckedCheckBoxColor">#6b9b36</item>
        <item name="shergil_previewUncheckedCheckBoxColor">#808080</item>

        <!-- Camera -->
        <item name="shergil_cameraFlashOffButtonDrawable">@drawable/ic_flash_off</item>
        <item name="shergil_cameraFlashOnButtonDrawable">@drawable/ic_flash_on</item>
        <item name="shergil_cameraFlashAutoButtonDrawable">@drawable/ic_flash_auto</item>
        <item name="shergil_cameraGalleryButtonDrawable">@drawable/ic_gallery</item>
        <item name="shergil_cameraCameraCaptureButtonDrawable">@drawable/ic_camera_capture</item>
        <item name="shergil_cameraSwitchCameraButtonDrawable">@drawable/ic_switch_camera</item>
        <item name="shergil_cameraCameraCaptureYesButtonDrawable">@drawable/ic_camera_yes</item>
        <item name="shergil_cameraCameraCaptureNoButtonDrawable">@drawable/ic_camera_no</item>
    </style>

    <!-- https://github.com/material-components/material-components-android/blob/master/docs/components/Card.md -->
    <style name="Widget.Shergil.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardForegroundColor">@color/card_view_foreground</item>
        <item name="checkedIconTint">?attr/shergil_cardMediaCheckedIconTintColor</item>
    </style>

    <style name="Shergil.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <item name="android:background">?attr/shergil_toolbarBackground</item>
    </style>

    <style name="Shergil.BottomBar">
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <item name="android:background">?attr/shergil_bottomBarBackground</item>
    </style>

    <!-- https://github.com/material-components/material-components-android/blob/master/docs/components/Checkbox.md -->
    <style name="Widget.Shergil.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Shergil.CheckBox</item>
    </style>

    <style name="ThemeOverlay.Shergil.CheckBox" parent="">
        <item name="colorOnSurface">?attr/shergil_previewUncheckedCheckBoxColor</item>
        <item name="colorSecondary">?attr/shergil_previewCheckedCheckBoxColor</item>
    </style>
</resources>